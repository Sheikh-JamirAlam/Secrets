<%- include('partials/header') %>

<div class="layout curve-svg">
  <div class="jumbotron text-center">
    <div class="container">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3 discovered-h1">You've Discovered My Secret!</h1>
      <% usersWithSecrets.forEach((user)=>{ %>
        <p class="secret-text"><%=user.secret%></p>
      <% }) %>
      <hr>
      <div class="secrets-button-container">
        <a class="home-button home-register secrets-button-layout" href="/logout" role="button">Log Out</a>
        <a class="home-button home-login secrets-button-layout" href="/submit" role="button">Submit a Secret</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
